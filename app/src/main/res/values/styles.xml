<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fitsSystemWindows">true</item>
        <item name="android:launchMode">singleTop</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <!-- 圆形dialog -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@color/transparency</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MainBottomImgStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="UserInfoLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_80px_in720p</item>
        <item name="android:layout_marginLeft">@dimen/_150px_in720p</item>
        <item name="android:layout_marginRight">@dimen/_150px_in720p</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="UserInfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_30px_in720p</item>
        <item name="android:layout_marginLeft">@dimen/_20px_in720p</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TimeDateStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparency</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="updateDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@color/transparency</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>　　
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="BlueSetApnTextViewStyle">
        <item name="android:layout_width">@dimen/_180px_in720p</item>
        <item name="android:layout_height">@dimen/_70px_in720p</item>
        <item name="android:textSize">@dimen/_30px_in720p</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/_20px_in720p</item>
        <item name="android:layout_marginTop">@dimen/_20px_in720p</item>
    </style>

    <style name="BlueSetApnEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_70px_in720p</item>
        <item name="android:textSize">@dimen/_26px_in720p</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/_10px_in720p</item>
        <item name="android:background">@drawable/login_et_bg</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginLeft">@dimen/_20px_in720p</item>
        <item name="android:layout_marginRight">@dimen/_20px_in720p</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BlueSetThresholdsTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_70px_in720p</item>
        <item name="android:textSize">@dimen/_30px_in720p</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/_20px_in720p</item>
        <item name="android:layout_marginTop">@dimen/_20px_in720p</item>
    </style>

    <style name="BlueSetThresholdsEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_70px_in720p</item>
        <item name="android:textSize">@dimen/_26px_in720p</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/_10px_in720p</item>
        <item name="android:background">@drawable/login_et_bg</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_marginLeft">@dimen/_40px_in720p</item>
        <item name="android:layout_marginRight">@dimen/_20px_in720p</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BlueSetGeoTextViewStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_65px_in720p</item>
        <item name="android:textSize">@dimen/_28px_in720p</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BlueSetGeoEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_60px_in720p</item>
        <item name="android:textSize">@dimen/_26px_in720p</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/_10px_in720p</item>
        <item name="android:background">@drawable/login_et_bg</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_marginLeft">@dimen/_20px_in720p</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BlueDeviceStatusTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_28px_in720p</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">@dimen/_40px_in720p</item>
        <item name="android:layout_marginRight">@dimen/_40px_in720p</item>
        <item name="android:layout_marginTop">@dimen/_10px_in720p</item>
    </style>

    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="BlueGeoFenceDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>　　
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="SettingsTextViewStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_28px_in720p</item>
        <item name="android:textColor">@drawable/settings_choice_color_bg</item>
        <item name="android:background">@drawable/settings_choice_bg</item>
    </style>

</resources>
