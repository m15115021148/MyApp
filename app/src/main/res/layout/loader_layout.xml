<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/window"
        android:layout_width="@dimen/_300px_in720p"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_20px_in720p">

        <com.meigsmart.meigapp.view.SimpleArcLoader
            android:id="@+id/loader"
            android:layout_width="@dimen/_120px_in720p"
            android:layout_height="@dimen/_120px_in720p"
            android:layout_centerInParent="true"
            app:arc_colors="@color/lan_dan"
            app:arc_style="simple_arc" />

        <TextView
            android:id="@+id/loadertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10px_in720p"
            android:text="Loading..."
            android:textColor="@android:color/white"
            android:textSize="@dimen/_30px_in720p" />

    </LinearLayout>


</RelativeLayout>