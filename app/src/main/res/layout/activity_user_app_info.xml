<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.meigsmart.meigapp.activity.UserAppInfoActivity">

    <include
        layout="@layout/include_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/user_app_info_bg"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_80px_in720p"
            android:layout_marginLeft="@dimen/_30px_in720p"
            android:layout_marginRight="@dimen/_30px_in720p"
            android:layout_marginTop="@dimen/_80px_in720p"
            android:background="@drawable/user_app_info_detial_bg"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200px_in720p">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/_135px_in720p"
                    android:layout_height="@dimen/_135px_in720p"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_20px_in720p"
                    android:background="@drawable/app_user_info_logo" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img1"
                    android:layout_marginLeft="@dimen/_20px_in720p"
                    android:layout_marginRight="@dimen/_20px_in720p"
                    android:layout_marginTop="@dimen/_20px_in720p"
                    android:layout_toLeftOf="@+id/add"
                    android:layout_toRightOf="@+id/img1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black_dan"
                    android:textSize="@dimen/_30px_in720p" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img1"
                    android:layout_marginBottom="@dimen/_20px_in720p"
                    android:layout_marginLeft="@dimen/_20px_in720p"
                    android:layout_marginRight="@dimen/_20px_in720p"
                    android:layout_toLeftOf="@+id/add"
                    android:layout_toRightOf="@+id/img1"
                    android:maxLines="1"
                    android:textColor="@color/red_dan"
                    android:textSize="@dimen/_32px_in720p" />


                <TextView
                    android:id="@+id/add"
                    android:layout_width="@dimen/_120px_in720p"
                    android:layout_height="@dimen/_60px_in720p"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_60px_in720p"
                    android:background="@drawable/user_info_app_add_bg"
                    android:gravity="center"
                    android:text="@string/user_app_info_layout_add"
                    android:textColor="@color/red_dan"
                    android:textSize="@dimen/_28px_in720p"
                    android:visibility="gone" />


            </RelativeLayout>


            <ImageView
                android:id="@+id/qr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_540px_in720p"
                android:layout_marginLeft="@dimen/_60px_in720p"
                android:layout_marginRight="@dimen/_60px_in720p"
                android:layout_marginTop="@dimen/_40px_in720p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30px_in720p"
                android:layout_marginBottom="@dimen/_30px_in720p"
                android:text="@string/user_app_info_layout_hint"
                android:textColor="@color/txt_hui"
                android:textSize="@dimen/_26px_in720p" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
