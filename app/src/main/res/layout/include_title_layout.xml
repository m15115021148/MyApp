<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90px_in720p"
        android:background="@color/red_dan">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:background="@drawable/back_index" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_35px_in720p" />


        <LinearLayout
            android:id="@+id/more"
            android:layout_width="@dimen/_120px_in720p"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:visibility="gone">

            <TextView
                android:id="@+id/rightName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20px_in720p"
                android:textColor="@drawable/bt_status_bg"
                android:textSize="@dimen/_30px_in720p" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>