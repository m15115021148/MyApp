<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90px_in720p">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/status"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/_48px_in720p"
                android:layout_height="@dimen/_48px_in720p"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:background="@drawable/title_group" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_30px_in720p" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/status"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right">

            <ImageView
                android:layout_width="@dimen/_48px_in720p"
                android:layout_height="@dimen/_48px_in720p"
                android:layout_marginRight="@dimen/_20px_in720p"
                android:background="@drawable/fragment_message_group_select_bg" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2px_in720p"
            android:layout_alignParentBottom="true"
            android:background="@color/pop_txt_bg" />

    </RelativeLayout>

</LinearLayout>