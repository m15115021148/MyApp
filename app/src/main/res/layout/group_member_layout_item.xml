<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="@dimen/_150px_in720p"
        android:layout_height="@dimen/_150px_in720p"
        android:layout_marginBottom="@dimen/_20px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginTop="@dimen/_30px_in720p"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/_30px_in720p" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_120px_in720p"
            android:layout_height="@dimen/_120px_in720p"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/add_member"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>