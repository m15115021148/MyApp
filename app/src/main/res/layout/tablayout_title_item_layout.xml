<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_48px_in720p"
            android:layout_height="@dimen/_48px_in720p" />

        <TextView
            android:layout_marginTop="@dimen/_3px_in720p"
            android:id="@+id/name"
            android:textColor="@drawable/tablayout_color_bg"
            android:textSize="@dimen/_28px_in720p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>