<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_txt_bg"
    android:orientation="vertical"
    tools:context="com.meigsmart.meigapp.activity.FilterActivity">

    <include
        layout="@layout/include_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20px_in720p"/>


    <TextView
        android:layout_margin="@dimen/_20px_in720p"
        android:textSize="@dimen/_30px_in720p"
        android:textColor="@color/black_dan"
        android:text="@string/filter_layout_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/startTime"
        android:textSize="@dimen/_30px_in720p"
        android:textColor="@color/white"
        android:background="@drawable/login_tv_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_10px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20px_in720p"/>

    <TextView
        android:layout_margin="@dimen/_20px_in720p"
        android:textSize="@dimen/_30px_in720p"
        android:textColor="@color/black_dan"
        android:text="@string/filter_layout_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/endTime"
        android:textSize="@dimen/_30px_in720p"
        android:textColor="@color/white"
        android:background="@drawable/login_tv_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_10px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p" />

    <TextView
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginTop="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:background="@drawable/login_tv_bg"
        android:gravity="center"
        android:text="@string/filter_layout_ok"
        android:textColor="@drawable/bt_status_bg"
        android:textSize="@dimen/_30px_in720p"
         />

</LinearLayout>
