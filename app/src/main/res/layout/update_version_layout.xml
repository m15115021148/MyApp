<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_660px_in720p"
        android:layout_height="wrap_content"
        android:background="@drawable/update_layout_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red_dan"
            android:gravity="center"
            android:padding="@dimen/_30px_in720p"
            android:text="@string/about_update_title"
            android:textColor="@color/white"
            android:textSize="@dimen/_30px_in720p" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20px_in720p"
            android:padding="@dimen/_20px_in720p"
            android:text="@string/about_update_content"
            android:textColor="@color/txt_hui"
            android:textSize="@dimen/_28px_in720p" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:lineSpacingExtra="@dimen/_10px_in720p"
            android:textColor="@color/txt_hui"
            android:textSize="@dimen/_26px_in720p" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_marginTop="@dimen/_120px_in720p"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10px_in720p"
                android:layout_weight="1"
                android:background="@drawable/update_cancel"
                android:gravity="center"
                android:padding="@dimen/_20px_in720p"
                android:text="@string/about_update_cancel"
                android:textColor="@color/grey"
                android:textSize="@dimen/_28px_in720p" />

            <TextView
                android:id="@+id/sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10px_in720p"
                android:layout_weight="1"
                android:background="@drawable/update_sure"
                android:gravity="center"
                android:padding="@dimen/_20px_in720p"
                android:text="@string/about_update_sure"
                android:textColor="@color/red_dan"
                android:textSize="@dimen/_28px_in720p" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>