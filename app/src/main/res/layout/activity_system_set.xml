<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.meigsmart.meigapp.activity.SystemSetActivity">

    <include
        layout="@layout/include_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/setPswLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90px_in720p"
        android:background="@color/white"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingRight="@dimen/_20px_in720p">

        <ImageView
            android:id="@+id/img"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_set_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/system_set_psw_title"
            android:textSize="@dimen/_32px_in720p" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_index" />

        <View
            android:layout_alignLeft="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2px_in720p"
            android:layout_alignParentBottom="true"
            android:background="@color/grey" />

    </RelativeLayout>


    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="#00000000"
        android:overScrollMode="never"
        android:scrollbars="none" />

</LinearLayout>
