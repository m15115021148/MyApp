<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_txt_bg"
    tools:context="com.meigsmart.meigapp.activity.RegisterClientActivity">

    <include
        android:id="@+id/include"
        layout="@layout/include_title_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/token"
        android:layout_width="0dp"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_40px_in720p"
        android:layout_marginRight="@dimen/_40px_in720p"
        android:layout_marginTop="@dimen/_40px_in720p"
        android:background="@drawable/login_et_bg"
        android:gravity="center_vertical"
        android:hint="请输入设备唯一号"
        android:padding="@dimen/_10px_in720p"
        android:textColor="@color/black"
        android:textSize="@dimen/_30px_in720p"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <EditText
        android:id="@+id/lang"
        android:layout_width="0dp"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginTop="@dimen/_40px_in720p"
        android:background="@drawable/login_et_bg"
        android:gravity="center_vertical"
        android:hint="请输入lang，默认en（English）"
        android:padding="@dimen/_10px_in720p"
        android:textColor="@color/black"
        android:textSize="@dimen/_30px_in720p"
        app:layout_constraintLeft_toLeftOf="@+id/token"
        app:layout_constraintRight_toRightOf="@+id/token"
        app:layout_constraintTop_toBottomOf="@+id/token" />

    <EditText
        android:id="@+id/bundleId"
        android:layout_width="0dp"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginTop="@dimen/_40px_in720p"
        android:background="@drawable/login_et_bg"
        android:gravity="center_vertical"
        android:hint="请输入bundle_id"
        android:padding="@dimen/_10px_in720p"
        android:textColor="@color/black"
        android:textSize="@dimen/_30px_in720p"
        app:layout_constraintLeft_toLeftOf="@+id/lang"
        app:layout_constraintRight_toRightOf="@+id/lang"
        app:layout_constraintTop_toBottomOf="@+id/lang" />

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginTop="@dimen/_40px_in720p"
        android:background="@drawable/login_et_bg"
        android:gravity="center_vertical"
        android:hint="请输入用户名"
        android:padding="@dimen/_10px_in720p"
        android:textColor="@color/black"
        android:textSize="@dimen/_30px_in720p"
        app:layout_constraintLeft_toLeftOf="@+id/bundleId"
        app:layout_constraintRight_toRightOf="@+id/bundleId"
        app:layout_constraintTop_toBottomOf="@+id/bundleId" />

    <TextView
        android:id="@+id/register"
        android:layout_width="0dp"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginTop="@dimen/_80px_in720p"
        android:background="@drawable/login_tv_bg"
        android:gravity="center"
        android:text="激活"
        android:textColor="@color/white"
        android:textSize="@dimen/_30px_in720p"
        app:layout_constraintLeft_toLeftOf="@+id/name"
        app:layout_constraintRight_toRightOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name" />

</android.support.constraint.ConstraintLayout>
