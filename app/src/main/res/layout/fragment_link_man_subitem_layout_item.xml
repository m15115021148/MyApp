<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90px_in720p"
        android:background="@color/white"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingRight="@dimen/_20px_in720p">

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/image_header"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_26px_in720p" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_toRightOf="@+id/head"
            android:singleLine="true"
            android:textColor="@color/black_dan"
            android:textSize="@dimen/_30px_in720p" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1px_in720p"
            android:layout_alignParentBottom="true"
            android:background="@color/pop_txt_bg" />

    </RelativeLayout>

</LinearLayout>